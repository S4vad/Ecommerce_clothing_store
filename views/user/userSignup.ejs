<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Login Page</title>
  
<!--   Bootstrap css CDN Link -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
</head>

<body>

    <div class="container ">
        <div class="row d-flex justify-content-center mt-5">
            <div class="col-10 col-md-6 col-lg-5  bg-dark text-light  py-3 px-5 rounded">
                <h2 class="text-center">SignUp</h2>
                <form action="/signin" method="post">
                    <div class="mb-2">
                        <label for="fname" class="form-label">First name</label>
                        <input type="fname" class="form-control" id="fname" name="fname" placeholder="Enter Your First Name">
                    </div>
                    <div class="mb-2">
                        <label for="lname" class="form-label">Last name</label>
                        <input type="lname" class="form-control" id="lname" name="lname" placeholder="Enter Your Last Name">
                    </div>
                    <div class="mb-2">
                        <label for="email" class="form-label">Email address</label>
                        <input type="email" class="form-control" id="email" name="email" placeholder="Enter Your Eamil">
                    </div>
                    <div class="mb-4">
                        <label for="password" class="form-label">Password</label>
                        <input type="password" class="form-control" id="password" name="password" placeholder="Enter Your Password">
                    </div>
                    <div class="d-grid mb-3">
                        <button type="submit" class="btn btn-warning">SignUp</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
</html>