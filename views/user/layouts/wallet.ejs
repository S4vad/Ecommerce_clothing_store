<!-- Wallet--------------------------------- -->
<!-- Wallet Modal (Hidden by Default) -->
<div class="wrap-header-wallet js-panel-wallet" 
    style="display: none; position: absolute; top: 50px; right: 20px; width: auto; background-color: rgba(0, 0, 0, 0.5); z-index: 9999;">
    <div class="s-full js-hide-wallet" 
        style="display: block; position: absolute; top: 0; left: 0; width: 100%; height: 100%; background-color: rgba(0, 0, 0, 0.6); z-index: 9998;">
    </div>

    <div class="header-wallet d-flex flex-column p-4" 
        style="position: relative; background-color: #fff; padding: 25px; border-radius: 8px; width: 400px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2); z-index: 10000;">
        <div class="header-wallet-title d-flex justify-content-between align-items-center mb-3">
            <span class="mtext-103 cl2" style="font-size: 24px;">Wallet Balance</span>
            <div class="fs-35 lh-10 cl2 p-2 pointer hov-cl1 trans-04 js-hide-wallet" style="cursor: pointer;">
                <i class="zmdi zmdi-close" style="font-size: 30px;"></i>
            </div>
        </div>
        
        <div class="header-cart-content d-flex flex-column js-pscroll">
            <ul class="header-wallet-wrapitem w-100">

                <% if (wallet && wallet.balance) { %> 
                    <li class="header-wallet-item d-flex mb-3">
                        <div class="header-wallet-item-txt pt-2">
                            <span class="header-wallet-item-info" style="font-size: 18px;">
                                &#8377;  <%= wallet.balance %> 
                            </span>
                        </div>
                    </li>
                <% } else { %>
                    <li class="header-wallet-item d-flex mb-3">
                        <div class="header-wallet-item-txt pt-2">
                            <p>Your wallet is empty.</p>
                        </div>
                    </li>
                <% } %>
            </ul>

            <div class="w-100">
                <div class="header-wallet-total w-100 pt-4 pb-4">
                    <div class="mtext-110 cl2" style="font-size: 28px;">
                        Rs. <%= wallet ? wallet.balance : '0.00' %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
