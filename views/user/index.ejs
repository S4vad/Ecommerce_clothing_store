<%- include('./layouts/main');-%>
<%- include('./layouts/header');-%>
<%- include('./layouts/carticon'); -%>

		

	<!-- Slider -->
	<section class="section-slide">
		<div class="wrap-slick1">
			<div class="slick1">
				<% banner.forEach((banner)=>{ %>
				<div class="item-slick1" style="background-image: url(/uploads/<%=banner.image%> );">
					<div class="container h-full">
						<div class="flex-col-l-m h-full p-t-100 p-b-30 respon5">
							
							<div class="layer-slick1 animated visible-false" data-appear="fadeInDown" data-delay="0">
								<span class="ltext-101 cl2 respon2">
									<%= banner.bannerName %>
								</span>
							</div>
								
							<div class="layer-slick1 animated visible-false" data-appear="fadeInUp" data-delay="800">
								<h2 class="ltext-201 cl2 p-t-19 p-b-43 respon1">
									<%= banner.bannerInfo %>
								</h2>
							</div>
								
							<div class="layer-slick1 animated visible-false" data-appear="zoomIn" data-delay="1600">
								<a href="product.html" class="flex-c-m stext-101 cl0 size-101 bg1 bor1 hov-btn1 p-lr-15 trans-04">
									Shop Now
								</a>
							</div>
							
						</div>
					</div>
				</div>
				<% }) %>

			</div>
		</div>
	</section>


	<!-- Banner -->
	<div class="sec-banner bg0 p-t-80 p-b-50">
	<div class="container">
		<div class="row">
			<% subBanner.forEach((subBanner, index) => { %>
				<div class="col-md-6 col-xl-4 p-b-30 m-lr-auto">
					<!-- Block1 -->
					<div class="block1 wrap-pic-w">
						<img src="uploads/<%= subBanner.image %>" alt="IMG-BANNER">

						<a href="categoryShop?category=<%= subBanner.Categories.category_name %>" class="block1-txt ab-t-l s-full flex-col-l-sb p-lr-38 p-tb-34 trans-03 respon3">
							<div class="block1-txt-child1 flex-col-l">
								<span class="block1-name ltext-102 trans-04 p-b-8">
									<%= subBanner.bannerHead %>
								</span>
								<span class="block1-info stext-102 trans-04">
									<%= subBanner.bannerInfo %>
								</span>
							</div>
							<div class="block1-txt-child2 p-b-4 trans-05">
								<div class="block1-link stext-101 cl0 trans-09">
									Shop Now
								</div>
							</div>
						</a>
					</div>
				</div>

			<% }) %>
		</div> <!-- Close the last row -->
	</div>
	</div>





	<!-- Product -->
	
	<section class="bg0 p-t-23 p-b-140">
		<div class="container">
			<div class="p-b-10">
				<h3 class="ltext-103 cl5">
					Product Overview
				</h3>
			</div>

			<div class="flex-w flex-sb-m p-b-52">
				<div class="flex-w flex-l-m filter-tope-group m-tb-10">

					<button class="stext-106 cl6 hov1 bor3 trans-04 m-r-32 m-tb-5 how-active1" data-filter="*">
						All Products
					</button>
					
					<% category.forEach(category=>{ %>
						<button class="stext-106 cl6 hov1 bor3 trans-04 m-r-32 m-tb-5" data-filter=".<%= category.category_name %>" >
							<%= category.category_name %>
						</button>
					<% }) %>
					
				</div>

				<div class="flex-w flex-c-m m-tb-10">
					<div class="flex-c-m stext-106 cl6 size-104 bor4 pointer hov-btn3 trans-04 m-r-8 m-tb-4 js-show-filter">
						<i class="icon-filter cl2 m-r-6 fs-15 trans-04 zmdi zmdi-filter-list"></i>
						<i class="icon-close-filter cl2 m-r-6 fs-15 trans-04 zmdi zmdi-close dis-none"></i>
						 Filter
					</div>

					<div class="flex-c-m stext-106 cl6 size-105 bor4 pointer hov-btn3 trans-04 m-tb-4 js-show-search">
						<i class="icon-search cl2 m-r-6 fs-15 trans-04 zmdi zmdi-search"></i>
						<i class="icon-close-search cl2 m-r-6 fs-15 trans-04 zmdi zmdi-close dis-none"></i>
						Search
					</div>
				</div>
				
				<!-- Search product -->
				<div class="dis-none panel-search w-full p-t-10 p-b-15">
					<div class="bor8 dis-flex p-l-15">
						<button class="size-113 flex-c-m fs-16 cl2 hov-cl1 trans-04">
							<i class="zmdi zmdi-search"></i>
						</button>

						<input class="mtext-107 cl2 size-114 plh2 p-r-15" type="text" name="search-product" placeholder="Search">
					</div>	
				</div>

				<!-- Filter -->
				<div class="dis-none panel-filter w-full p-t-10">
					<form action="/filter" method="post">
					<div class="wrap-filter flex-w bg6 w-full p-lr-40 p-t-27 p-lr-15-sm" style="display: flex; justify-content: center; align-items: center;">
						<div class="filter-col1 p-r-15 p-b-27" >
							<div class="mtext-102 cl2 p-b-15">
								Sort By
							</div>

							<ul>
								<li class="p-b-6">
									<a href="#" class="filter-link stext-106 trans-04">
										Default
									</a>
								</li>

								<li class="p-b-6">
									<a href="#" class="filter-link stext-106 trans-04">
										Popularity
									</a>
								</li>

								<li class="p-b-6">
									<a href="#" class="filter-link stext-106 trans-04">
										Average rating
									</a>
								</li>

								<li class="p-b-6">
									<button>
										<a href="#" class="filter-link stext-106 trans-04 filter-link-active">
											Newness
										</a>
									</button type=submit>

								</li>

								<li class="p-b-6">
									<button>
										<a href="" class="filter-link stext-106 trans-04">
											Price: Low to High
										</a>
									</button type="submit">
								</li>

								<li class="p-b-6">
								<button>
									<a href="#" class="filter-link stext-106 trans-04">
										Price: High to Low
									</a>
								</button type="submit">
								</li>
							</ul>
						</div>

						<div class="filter-col2 p-r-15 p-b-27">
							<div class="mtext-102 cl2 p-b-15">
								Price
							</div>

							<ul>
								<li class="p-b-6">
									<a href="#" class="filter-link stext-106 trans-04 filter-link-active">
										All
									</a>
								</li>

								<li class="p-b-6">
									
									<button type="submit" class="filter-link stext-106 trans-04" name="priceRange" value="500AndBelow">
									  ₹500 and below
									</button>
								  </li>

								<li class="p-b-6">
									<button type="submit" class="filter-link stext-106 trans-04" name="priceRange" value="501To1000">
										₹501 - ₹1000
									</button>

								</li>

								<li class="p-b-6">
									<button type="submit" class="filter-link stext-106 trans-04" name="priceRange" value="1001To5000">
										₹1001  - ₹5000
									</button>

								</li>

								<li class="p-b-6">
									<button type="submit" class="filter-link stext-106 trans-04" name="priceRange" value="5001To10000">
										₹5001 - ₹10000
									</button>

								</li>

								<li class="p-b-6">
									<button type="submit" class="filter-link stext-106 trans-04" name="priceRange" value="10001AndAbove">
										₹10001 and above
									</button>

								</li>
							</ul>
						</div>

					</div>
				</form>
				</div>
			</div>


			<!-- shop PRODUCT images starting -->

			<div class="row isotope-grid">
				<% product.forEach(function(item) { %>
				
				<div class="col-sm-6 col-md-4 col-lg-3 p-b-35 isotope-item <%= item.Categories.category_name %>">
					<!-- Block2 -->
					<div class="block2">
							<div class="block2-pic hov-img0">
								<img src="uploads/<%= item.Images[0] %>" alt="IMG-PRODUCT">
				
								<a href="quickView/<%= item._id %>" class="block2-btn flex-c-m stext-103 cl2 size-102 bg0 bor2 hov-btn1 p-lr-15 trans-04">
									Quick View
								</a>
							</div>
				
							<div class="block2-txt flex-w flex-t p-t-14">
								<div class="block2-txt-child1 flex-col-l">
									<a href="productDetails/<%= item._id %>" class="stext-104 cl4 hov-cl1 trans-04 js-name-b2 p-b-6">
										<%= item.Name %>
									</a>
				
									<span class="stext-105 cl3">
										<%= item.Price %>
									</span>
								</div>
								<div class="block2-txt-child2 flex-r p-t-3">
									<div class="d-flex">
										<span id="message-<%= item._id %>" class="small text-bold text-truncate" style="max-width: 150px; display: inline-block;"></span>
									</div>
									

									
									<button onclick="addWishlist('<%= item._id %>')" class="btn-addwish-b2 dis-block pos-relative js-addwish-b2">
										<img class="icon-heart1 dis-block trans-04" src="user/images/icons/icon-heart-01.png" alt="ICON">
										<img class="icon-heart2 dis-block trans-04 ab-t-l" src="user/images/icons/icon-heart-02.png" alt="ICON">
										

									</button>
									

								</div>
							</div>

					
					</div>
				
				</div>
				<% }); %>
				
			</div>
		
				
			

			<!-- Load more -->
			<div class="flex-c-m flex-w w-full p-t-45">
				<a href="#" class="flex-c-m stext-101 cl5 size-103 bg2 bor1 hov-btn1 p-lr-15 trans-04">
					Load More
				</a>
			</div>
		</div>

	<script>
		function addWishlist(productId){
			$.ajax({
				url:`/addWishlist/${productId}`,
				method:'post',
				success:function(response){
					const respo=response.message;
					$(`#message-${productId}`).html(respo)
					setTimeout(()=>{
					$(`#message-${productId}`).html(" ")


					},1500)
				},
				error:function(error){

					console.log(error)

				}
			})
		}

	</script>
	
	

<%- include('./layouts/footer');-%>

<%- include('./layouts/additional');-%>













