<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Review List</title>
  <link rel="stylesheet" href="/path/to/bootstrap.css"> <!-- Include Bootstrap CSS -->
  <style>
    .review-table td, .review-table th {
      text-align: center;
      vertical-align: middle;
    }
    .review-image {
      width: 100px;
      height: 100px;
      object-fit: cover;
    }
    .star-rating {
      color: #ffcc00; /* Yellow color for stars */
    }
  </style>
</head>
<body>
  <div class="container mt-4">
    <h2>Review List</h2>
    <table class="table table-bordered review-table">
      <thead>
        <tr>
          <th>Image</th>
          <th>Product Name</th>
          <th>User Name</th>
          <th>Rating</th>
          <th>Review</th>
          <th>Posted On</th>
        </tr>
      </thead>
      <tbody>
        <% if (reviews.length > 0) { %>
          <% reviews.forEach(review => { %>
            <tr>
              <!-- Display Product Image -->
              <td><img src="<%= review.product.Images[0] %>" alt="Product Image" class="review-image"></td>

              <!-- Display Product Name -->
              <td><%= review.product.Name %></td>

              <!-- Display User Name -->
              <td><%= review.user.fname %> <%= review.user.lname %></td>

              <!-- Display Rating as Yellow Stars -->
              <td>
                <span class="star-rating">
                  <% for (let i = 1; i <= 5; i++) { %>
                    <%= (i <= review.rating) ? '★' : '☆' %>
                  <% } %> 
                  ( <%= review.rating %> / 5 )
                </span>
              </td>

              <!-- Display Review Text -->
              <td><%= review.review %></td>

              <!-- Display Review Date -->
              <td><%= review.createdAt.toLocaleString() %></td>
            </tr>
          <% }) %>
        <% } else { %>
          <tr>
            <td colspan="6">No reviews found.</td>
          </tr>
        <% } %>
      </tbody>
    </table>
  </div>

  <script src="/path/to/bootstrap.js"></script> <!-- Include Bootstrap JS -->
</body>
</html>
